<h2> Welcome, <%= current_user.username %></h2>
<h3> Tweets </h3>

<p><% @tweets.each do |tweet| %>
    
    <% if !tweet.content.empty? %>
      <div>
      <%= tweet.content %>
      </div>
    <%else%>
      <h1>No tweets!</h1>
    <%end%>
     
<%end%>
<a href="/tweets/new">Create Tweet</a><br>
