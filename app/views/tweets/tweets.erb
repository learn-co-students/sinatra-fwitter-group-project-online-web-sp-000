<% if Helpers.is_logged_in?(session) %>
    <h1>Welcome, <%= @user.username %></h1>
    <a href ="/users/<%= @user.slug %>">My Profile</a>
    <a href="/logout">Logout</a>

    <h2>Feed</h2>

    <% @tweets.each do |tweet| %>
        <div>
            <%= tweet.user.username %><br>
            <%= tweet.content %>
        </div>
        <br>
    <% end %>

<% else %>
    <h1> You Must Be <a href="/login">Logged in</a> to See Tweets </h1>
<% end %>
    

