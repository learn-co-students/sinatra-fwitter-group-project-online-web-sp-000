<h3>Welcome, <%= current_user.username %></h3>

<h1>Tweets</h1>

<% @tweets.each do |tweet| %>
  <div>
    <%= tweet.content %>
  </div>
<% end %>

<% if logged_in? %>

  <a href="/tweets/new"> Create Tweet </a>
  <a href="/logout"> Log Out </a>
  <p>Welcome, <%=current_user.username %></p>

<% else %>
  <a href="/signup">Sign Up</a>
  <a href="/login"> Sign In </a>
<%end %>
