<h2>Welcome, <%= current_user.username %></h2>

<h3>Home</h3>
<ul>
	<% @tweets.each do |tweet| %>
		<li class="tweets" onclick="location.href='/tweets/<%= tweet.id %>'">
			<h2><a class="username" href="/users/<%= tweet.user.slug %>"><%= tweet.user.username %></a></h2>
			<br>
			<%= tweet.content %>
		</li>
		<br>
	<% end %>
</ul>
