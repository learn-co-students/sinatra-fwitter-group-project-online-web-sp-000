<h3>Edit tweet</h3>
<br>
<form action='/tweets/<%= @tweet.id %>' method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <textarea name="content" required><%= @tweet.content %></textarea><br><br>
    <input type="submit" name="submit" value="Update tweet" class="btn btn-primary"><br><br>
</form>
<form action='/tweets/<%= @tweet.id %>' method="post">
    <input id="hidden" type="hidden" name="_method" value="delete">
    <input type="submit" name="submit" value="Delete tweet" class="btn btn-danger"><br><br>
</form>
