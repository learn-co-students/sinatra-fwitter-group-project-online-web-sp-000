<div class="container" >
  <div class="row">
    <div class="col-md-2 col-md-offset-2">	

	<h3>You tweeted:</h3>
	<h4><b>Title:<%= @tweet.title %></b></br></h4>
	<h4><b>Content:<%= @tweet.content %></b></br></h4>

	<form action="/tweets/<%= @tweet.id %>/edit" method=get>
		<input type="submit" value="Edit Tweet">
	</form>

	<form action="/tweets/<%= @tweet.id %>/delete" method="post">
		<input id="hidden" type="hidden" name="_method" value="delete">
		<input type="submit" value="Delete Tweet">
	</form>

	<h4><a href="/logout">Click here to logout</a></h4>
	</div>
  </div>
</div>









