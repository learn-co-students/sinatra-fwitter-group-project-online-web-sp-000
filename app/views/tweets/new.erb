<% if is_logged_in?(session) %>
  <form action='/tweets' method="post">
    Content:
    <input type="text" name="content"><br>
    Create Your Tweet:

    <input type="submit" value="Submit" id="submit">
  
   </form>

  <% else %>
      <h1> You Must Be Logged in to Make Tweets </h1>
      <%= redirect "/login" %>
  <% end %>
